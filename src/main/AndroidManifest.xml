        <activity
            android:name=".AdvertiseABook"
            android:label="@string/title_activity_advertise_abook" >
        </activity>
        <activity
            android:name=".Explore"
            android:label="@string/title_activity_explore" >
        </activity>
        <activity
            android:name=".Explorer"
            android:label="@string/title_activity_explorer" >
        </activity>
        <activity
            android:name=".Summary"
            android:label="@string/title_activity_summary" >
        </activity>
        <activity
            android:name=".RegisterRoomActivity"
            android:label="@string/title_activity_register_room" >
        </activity>
        <activity
            android:name=".RoomExplorer"
            android:label="@string/title_activity_register_room" >
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".ShowSettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.fragments.MyPostingFragment"
            android:label="@string/title_activity_settings" >
